@model List<Product>

<h2>Popular Products</h2>

<p>Time taken: @ViewBag.ElapsedTime ms (@(ViewBag.UseCache ? "With Cache" : "Without Cache"))</p>

<ul>
    @foreach (var product in Model)
    {
        <li>@product.Name (Sales: @product.Sales, Rating: @product.Rating)</li>
    }
</ul>

<a href="/Home/Index" class="btn btn-primary">Back to Home</a>
