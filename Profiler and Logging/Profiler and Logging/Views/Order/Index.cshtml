@model IEnumerable<Order>

<h2>Orders</h2>
<table>
    <thead>
        <tr>
            <th>Product ID</th>
            <th>User ID</th>
            <th>Order Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.ProductId</td>
                <td>@order.UserId</td>
                <td>@order.OrderDate</td>
                <td><a href="@Url.Action("Details", "Orders", new { id = order.Id })">Details</a></td>
            </tr>
        }
    </tbody>
</table>
